<%- include('layout', { body: `
  <a href="/items" class="back-link">← Back</a>
  <div class="detail">
    <img class="detail-img" src="${item.image_url? item.image_url : 'https://images.unsplash.com/photo-1518779578993-ec3579fee39f?auto=format&fit=crop&w=1400&q=80'}" alt="${item.name}">
    <div class="detail-info">
      <h1>${item.name}</h1>
      <p class="price">₹${item.price}</p>
      <p>${item.description}</p>
      <p><strong>Contact:</strong> ${item.contact}</p>
    </div>
  </div>
` }) %>