<%- include('layout', { body: `
  <section class="hero">
    <h1>DealX — Campus Reuse Hub</h1>
    <p class="lead">Buy and sell used college essentials at affordable prices.</p>
    <div><a href="/items" class="btn">Browse Items</a> <a href="/add" class="btn ghost">Sell an Item</a></div>
  </section>

  <section>
    <h2>Latest listings</h2>
    <div class="grid">
      ${products.length ? products.map(p => `
        <article class="card">
          <a href="/item/${p.id}"><img src="${p.image_url? p.image_url : 'https://images.unsplash.com/photo-1518779578993-ec3579fee39f?auto=format&fit=crop&w=1200&q=80'}" alt="${p.name}"></a>
          <div class="card-body">
            <h3><a href="/item/${p.id}">${p.name}</a></h3>
            <p class="muted">${(p.description||'').substring(0,120)}${(p.description||'').length>120?'...':''}</p>
            <p class="price">₹${p.price}</p>
          </div>
        </article>
      `).join('') : `<div class="empty">No items yet. Add the first listing!</div>`}
    </div>
  </section>
` }) %>