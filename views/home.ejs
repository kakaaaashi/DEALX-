<%- include('layout', { body: `
  <section class="hero">
    <div class="hero-inner">
      <h1>DealX</h1>
      <p class="lead">Buy & Sell Used Campus Essentials Effortlessly</p>
      <div class="cta-row"><a href="/items" class="btn primary">View Listings</a> <a href="/add" class="btn ghost">Sell an Item</a></div>
    </div>
  </section>

  <section class="section">
    <h3>Latest Listings</h3>
